{
    "name": "vscode-slither",
    "displayName": "Slither",
    "description": "Slither: Solidity static analysis framework integration for Visual Studio",
    "version": "0.0.4",
    "publisher": "Trail of Bits",
    "author": "Trail of Bits",
    "license": "AGLP-3.0",
    "homepage": "https://www.trailofbits.com/",
    "repository": {
        "type": "git",
        "url": "https://github.com/trailofbits/slither-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/trailofbits/slither-vscode/issues"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "slither",
        "solidity",
        "solc",
        "analysis",
        "auditing"
    ],
    "activationEvents": [
        "onCommand:extension.slither",
        "onLanguage:slither-output"
    ],
    "main": "./out/extension",
    "icon": "./resources/extension-icon.png",
    "preview": true,
    "private": true,
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "dependencies": {
        "@types/semver": "^6.0.0",
        "shelljs": "^0.8.3"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "@types/shelljs": "^0.8.1",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "contributes": {
        "commands": [
            {
                "command": "slither.analyze",
                "title": "Run Slither"
            }
        ],
        "configuration": [
            {
                "title": "slither",
                "properties": {
                    "slither.exclude": {
                        "type": "array",
                        "description": "List of detectors to exclude"
                    },
                    "slither.include": {
                        "type": "array",
                        "description": "List of dectectors to include only"
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "slither-output",
                "configuration": "./resources/log.configuration.json",
                "mimetypes": [
                    "text/x-code-output",
                    "x-code-output",
                    "text/log",
                    "text/x-log",
                    "log"
                ]
            }
        ],
        "grammars": [
            {
                "language": "slither-output",
                "scopeName": "slither.output",
                "path": "./resources/slither-output.tmLanguage"
            }
        ]
    }
}
